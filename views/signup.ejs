<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>signup</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="holder">
      <h1>SignUp Page</h1>
      <form action="/user" method="post">
        <label for="firstName">Entet first name</label>
        <input type="text" id="firstName" name="firstName" />

        <label for="lastName">Enter last name</label>
        <input type="text" id="lastName" name="lastName" />

        <label for="email">Enter email</label>
        <input type="email" id="email" name="email" />

        <label class="admin" for="role" id="role">Select role</label>
        <label class="block" for="student" id="student">Student</label>
        <input
          class="block"
          type="radio"
          name="role"
          id="student"
          value="student"
        />
        <br />
        <label class="block" for="educator" id="educator">Educator</label>
        <input
          class="block"
          type="radio"
          id="educator"
          name="role"
          value="educator"
        />

        <label for="password">Enter password</label>
        <input type="text" id="password" name="password" />
        <br />
        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
